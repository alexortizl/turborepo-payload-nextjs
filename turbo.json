{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^generate-types"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["DATABASE_URI", "PAYLOAD_SECRET"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "generate-types": {
      "dependsOn": ["^generate-types"],
      "outputs": ["src/types/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
